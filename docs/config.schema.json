{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Mini-RPA Config",
  "type": "object",
  "additionalProperties": true,

  "properties": {
    "vision": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "threshold": { "type": "number", "minimum": 0, "maximum": 1 },
        "scale_range": { "$ref": "#/$defs/scaleRange" },
        "retries": { "type": "integer", "minimum": 0 },
        "retry_delay": { "$ref": "#/$defs/duration" },
        "grayscale": { "type": "boolean" },
        "region": { "$ref": "#/$defs/region" }
      }
    },

    "input": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "type_delay": { "$ref": "#/$defs/duration" }
      }
    },

    "window": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "focus_timeout": { "$ref": "#/$defs/duration" }
      }
    },

    "run": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "timeout": { "$ref": "#/$defs/duration" }
      }
    }
  },

  "$defs": {
    "duration": {
      "anyOf": [
        { "type": "number" },
        { "type": "string", "pattern": "^\\d+(ms|s|m)$" }
      ],
      "description": "Напр.: 400ms, 2s, 1m или число секунд"
    },

    "scaleRange": {
      "type": "array",
      "items": { "type": "number" },
      "minItems": 2,
      "maxItems": 2
    },

    "region": {
      "anyOf": [
        { "enum": ["screen", "window"] },
        {
          "type": "object",
          "required": ["left", "top", "width", "height"],
          "properties": {
            "left": { "type": "integer" },
            "top": { "type": "integer" },
            "width": { "type": "integer", "minimum": 1 },
            "height": { "type": "integer", "minimum": 1 }
          },
          "additionalProperties": false
        }
      ]
    }
  }
}
